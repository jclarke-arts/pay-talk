---
interface Props {
  title?: string;
}

const { title = "Location Viewer" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
      }
      .popup {
        padding: 10px;
        max-width: 300px;
      }
      .popup h3 {
        margin: 0 0 10px 0;
      }
      .popup p {
        margin: 0;
        line-height: 1.4;
        margin-bottom: 0.75rem;
      }
      /* Custom range input styling */
      input[type="range"] {
        -webkit-appearance: none;
        background: #ddd;
        border-radius: 5px;
        height: 4px;
      }
      input[type="range"]::-webkit-slider-thumb {
        -webkit-appearance: none;
        height: 12px;
        width: 12px;
        border-radius: 50%;
        background: #3b82f6;
        cursor: pointer;
      }
      input[type="range"]::-moz-range-thumb {
        height: 12px;
        width: 12px;
        border-radius: 50%;
        background: #3b82f6;
        cursor: pointer;
        border: none;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
